begin
  require 'jeweler'
  Jeweler::Tasks.new do |gemspec|
    gemspec.name = "shoulda_fast_context"
    gemspec.description = "make your shoulda context faster with fast_context"
    gemspec.description = "This is a shoulda extension with fast_context which runs setup only once inside the context"
    gemspec.email = "supportdev@crri.co.in"
    gemspec.homepage = "http://github.com/castlerock/fast_context"
    gemspec.authors     = ["Pratik Naik", "Ed Schmalzle", "Nick Ewing", "Sabarish Kumar R"]
    gemspec.add_dependency 'shoulda', "~> 3.0"
  end
rescue LoadError
  puts "Jeweler not available. Install it with: gem install jeweler"
end